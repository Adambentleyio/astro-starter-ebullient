---
import Container from '@components/container.astro'
import Layout from '@layouts/Layout.astro'

---

<Layout title="" nav="empty">
<div class="relative flex flex-col md:justify-center mx-auto bg-violet-900/70 bg-opacity-90 bg-gradient-to-b bg-violet-900 via-violet-700/10 to-transparent px-8 pt-20 md:px-12 lg:px-24 lg:py-40 h-screen">
    <div class="absolute brightness-50 -z-10 inset-0 bg-[url('/src/assets/hero-gym.png')] bg-no-repeat bg-top bg-cover"></div>
    <!-- Inner content container -->
    <div class="max-w-4xl mx-auto">
    <div class="text-slate-50 max-w-2xl z-20 flex flex-col">
        <p class="text-xs border-2 rounded-sm inline md:inline-block p-1 font-semibold tracking-wide uppercase mb-4 max-w-sm outline-none ">
          Ebullient is a starter template by Greyscale88</p>
      <h1 class="text-3xl text-slate-50  sm:text-3xl lg:text-6xl font-bold mb-4 ">
        Simple landing page design for your next project
      </h1>
    </div>
    <!-- Tailwind form -->
    <div>
      <div class="grid max-w-7xl grid-cols-1 gap-10 lg:grid-cols-12 ">
        <div class="max-w-xl text-xl text-white sm:text-2xl lg:col-span-7">
          <p class="inline font-['Londrina_Outline'] sm:block lg:inline xl:block">Sign up for our newsletter along with 200+ other awesome folks.</p>
        </div>
        <form class="w-full max-w-md lg:col-span-5 lg:pt-2">
          <div class="flex gap-x-4">
            <label for="email-address" class="sr-only">Email address</label>
            <input id="email-address" name="email" type="email" autocomplete="email" required class="min-w-0 flex-auto rounded-md border-0 px-3.5 py-2 text-gray-100 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-100  focus:ring-2 bg-gray-600 focus:ring-inset focus:ring-violet-600 sm:text-sm sm:leading-6" placeholder="Enter your email">
            <button type="submit" class="flex-none rounded-md bg-violet-600 px-3.5 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-violet-600">Subscribe</button>
          </div>
          <p class="mt-4 text-sm leading-6 text-gray-200/90">We care about your data. Read our <a href="#" class="font-semibold text-violet-400 hover:text-indigo-500">privacy&nbsp;policy</a>.</p>
        </form>
      </div>
    </div>
  </div>
  </div>
</Layout>
