---
import Container from "@components/container.astro";
import Hero from "@components/hero.astro";
import Layout from "@layouts/Layout.astro";
import heroGym from "@assets/hero-gym.png"



  const TemplateContent = {
    hero: {
        title: "A brand new website service for awesome folks running a Company of One.",
        hook: "We're passionate about personal development and helping people to be the best they can be, just like you. ",
        bulletList: [
            "Cost effective website design",
            "Based on the ebullient starter template",
            "For Therapists, Coaches, Instructors and Trainers",
        ],
        cta: [{
            text: "Get in touch",
            link: "/contact",
        },
        {
            text: "See our work",
            link: "/therapist",
        },],
        image: {
            src: heroGym,
            alt: "hero gym",
            width: 480,
            height: 560,
        },
    }
}
---

<Layout title="">
  <Container>
    <Hero props={TemplateContent.hero} />
  </Container>
</Layout>
