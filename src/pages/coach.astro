---
import Container from "@components/container.astro";
import Hero from "@components/hero.astro";
import Cta from "@components/cta.astro";
import Features from "@components/features.astro";
import Logos from "@components/logos.astro";
import Content from "@components/content.astro";
import TestimonialGrid from "@components/testimonialgrid.astro";
import Aboutpersonfeature from "@components/aboutpersonfeature.astro";
import Layout from "@layouts/Layout.astro";

// Assets
import heroGym from "@assets/hero-gym.png"
import heroAlt from "@assets/hero-alt.png"
import heroImage from "@assets/hero-yoga.jpg";



  const coachContent = {
    hero: {
        title: "Thrive at work. Make change happen. Elevate your career.",
        hook: "Develop your leadership skills, increase productivity, and boost your confidence with executive coaching.",
        bulletList: [],
        cta: [{
            text: "Start the growth machine",
            link: "/contact",
        },
        {
            text: "Availability",
            link: "/therapist",
        },],
        image: {
            src: heroImage,
            alt: heroAlt,
            width: 480,
            height: 560,
        },
    },
        features: {
                title: "Let’s change the way we do things around here…",
                hook: "You know you want more from your life, yourself, and your work. But you keep getting stuck in the same patterns, you feel overwhelmed, and you don't know what the f*ck to do about it.",
                cards: [
                    {
                        title: "Improved leadership skills",
                        description:
                        "Executive coaching can help individuals develop their leadership skills and navigate complex business challenges.",
                        icon: "mdi:home",
                    },
                    {
                        title: "Increased productivity",
                        description:
                        "Coaching can provide individuals with strategies to improve their time management, organization, and overall productivity.",
                        icon: "bx:bxs-user",
                    },
                    {
                        title: "Make moves",
                        description:
                        "With executive coaching, you'll have the tools you need to navigate the job market and take your career to the next level.",
                        icon: "bx:bxs-window-alt"
                    },
                    {
                        title: "Boost your confidence",
                        description:
                        "Executive coaching can help you build your self-confidence and communicate more effectively in both personal and professional settings.",
                        icon: "bx:bxs-window-alt"
                    },
                    {
                        title: "Enhance your personal brand",
                        description:
                        "Through executive coaching, you can strengthen your personal brand and increase your self-assurance in the workplace.",
                        icon: "bx:bxs-file-find",
                    },
                    {
                        title: "Develop a positive mindset",
                        description:
                        "Executive coaching can help you adopt a positive mindset and increase your self-confidence, leading to greater success in your career and personal life.",
                        icon: "bx:bxs-user",
                    },
                ]
            },
            about: {
                title: "You want it? you got it.",
                subtitle: "I'm here to support your journey. We work together to create manageable, sustainable, and real change that gets you to where you really want to be. ",
                person:
                    {
                        name: "Natalia Kowalska",
                        title: "Executive Coach",
                        avatar: {
                        src: heroImage,
                        width: 480,
                        fit: 'cover',
                        // height: 560,
                        },
                    }
                },
                cta: {
                    title: "Ready to get started?",
                    subtitle: "Tired of awkward Zoom calls and repeating the same patterns?",
                    paragraphs: ["Let's talk about how we can help you achieve your goals.", "Book a free 15-minute consultation today."],
                    button: {
                    text: "Get started",
                    url: "/contact",
                    },
                    style: "primary"
                }
    }
---

<Layout title="">
    <Hero style="full-width" props={coachContent.hero} />
    <Container>
    <Features
        title={coachContent.features.title}
        hook={coachContent.features.hook}
        cards={coachContent.features.cards}/>
    <Content />
    <Logos />
    <Aboutpersonfeature props={coachContent.about} />
    <TestimonialGrid />
    <Cta props={coachContent.cta} />
  </Container>
</Layout>
