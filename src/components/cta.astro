---
import Link from "./ui/link.astro";
const { title, subtitle, button, style}: {title: string; subtitle: string; button: Object; style: string} = Astro.props.props

// style object based on value of style prop primary or secondary

const styleObj: Record<string, string> = {
  "primary": "bg-gradient-to-br from-teal-500 to-fuchsia-600",
  "secondary": "bg-gradient-to-br from-gray-500 to-gray-700",
}

const styleClasses : string = styleObj[style]


---

<div
  class:list={["relative bg-slate-900 border-4 border-slate-800 px-20 py-20 mt-20 mx-auto max-w-5xl rounded-lg flex flex-col gap-4 items-center text-center z-20" ]}>
  <div class:list={["absolute inset-2 z-10 rounded-lg p-8 blur-lg", styleClasses]}>
    <!-- Your content here -->
  </div>
  <div class="relative z-30 flex flex-col items-center p-4 bg-white bg-opacity-10 rounded-xl py-10 backdrop-blur-3xl ">
    <div class="absolute inset-0 z-10 "></div>
    <h2 class="text-white font-semibold text-4xl md:text-5xl">{title}</h2>
    <p class="text-slate-100 text-lg mt-6 md:text-xl max-w-2xl">
      {subtitle}
    </p>
    <div class="flex mt-8">
      <Link href="#" style="muted" class="bg-white font-bold text-black">{button.text}</Link>
    </div>

  </div>
</div>
