---
import { Image } from "@astrojs/image/components";
// import heroImage from "assets/hero.png";
import heroImage from "assets/midjourney-adam-topless.png";
// import Link from "@components/ui/link.astro";
import Buttonlist from "./buttonlist.astro";

const {title = "Attachment-based therapy with a focus on developing healthy relationships"} = Astro.props

---

<div class="py-24 lg:py-0 lg:min-h-[90vh] grid lg:grid-cols-2 place-items-center">
  <div class="hidden py-6 lg:order-1 lg:block ">
    <Image
      src={heroImage}
      alt="Astronaut on moon"
      loading="eager"
      class="w-96"

    />
  </div>
  <div class="mx-auto">
    <h1 class="text-3xl lg:text-6xl font-bold lg:tracking-tight text-transparent bg-clip-text bg-gradient-to-br from-pink-500 to-fuchsia-600 z-90">
      {title}
    </h1>
    <p class="text-xs bg-fuchsia-200 rounded-sm inline-block p-1 font-semibold tracking-wide uppercase mt-4 text-black max-w-xl outline-none">
      Ebullient is a starter template by Greyscale</p>
    <div class="ml-1">
        <p class="text-lg mt-2 max-w-xl pt-4 pb-2g">A website starter for leaders, therapists and coaches.
        <!-- <p class="text-sm mt-4 tracking-wide">
          Built on blazingly fast and modern architecture with a score of 90+ Google Lighthouse and great out-of-the-box SEO.
        </p> -->
        <ul class="flex flex-col space-y-2 text-md my-4 marker:text-fuchsia-500 list-disc list-inside">
          <li>Blazingly fast websites</li>
          <li>90+ Google Lighthouse scores</li>
          <li>Best-in-class Search Engine Optimization</li>
        </ul>
      </p>
    </div>
    <Buttonlist />
  </div>
</div>
