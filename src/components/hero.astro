---
import { Image } from "@astrojs/image/components";
// import heroImage from "assets/hero.png";
import heroImage from "assets/hero-yoga.jpg";
// import Link from "@components/ui/link.astro";
import Buttonlist from "./buttonlist.astro";

const {title = "Attachment therapy for developing healthy relationships"} = Astro.props

---

<div class="py-12 lg:py-0 lg:min-h-[90vh] grid md:grid-cols-2 place-items-center gap-4">
  <div class="hidden py-6 md:order-1 md:block ">
    <Image
      src={heroImage}
      alt="Astronaut on moon"
      loading="eager"


    />
  </div>
  <div class="mx-auto max-w-2xl">
    <h1 class="text-4xl sm:text-5xl lg:text-5xl font-bold text-transparent bg-clip-text bg-gradient-to-br from-black to-black z-90">
      {title}
    </h1>
    <p class="text-xs border-2  rounded-sm inline-block p-1 font-semibold tracking-wide uppercase mt-4 max-w-xl outline-none">
      Ebullient is a starter template by Greyscale</p>
    <div class="ml-1">
        <p class="mt-2 max-w-xl pt-4 pb-2g">A website starter for leaders, therapists and coaches.
        <!-- <p class="text-sm mt-4 tracking-wide">
          Built on blazingly fast and modern architecture with a score of 90+ Google Lighthouse and great out-of-the-box SEO.
        </p> -->
        <ul class="flex flex-col space-y-2 text-md my-4 marker:text-fuchsia-500 list-disc list-outside">
          <li>Blazingly fast websites</li>
          <li>90+ Google Lighthouse scores</li>
          <li>Best-in-class Search Engine Optimization</li>
        </ul>
      </p>
    </div>
    <Buttonlist />
  </div>
</div>
